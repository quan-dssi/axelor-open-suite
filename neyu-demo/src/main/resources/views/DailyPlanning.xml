<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid name="neyu-daily-planning-grid" title="Daily Planning" groupBy="geo" model="com.axelor.neyu.db.DailyPlanning" editable="true"
		edit-icon="false">
		<field name="geo" readonly="true" width="65" />
		<field name="aff" readonly="true" width="60" />
		<field name="offer" readonly="true" width="80" />
		<field name="sub" readonly="true" width="60" />
		<field name="leadDM1" readonly="true" aggregate="sum" width="95" />
		<field name="arqaDM1" readonly="true" aggregate="sum" width="95" />
		<field name="trDM1" readonly="true" aggregate="sum" width="85" />
		<field name="leadD0" readonly="true" aggregate="sum" width="85" />
		<field name="arqaD0" readonly="true" aggregate="sum" width="85" />
		<field name="trD0" readonly="true" aggregate="sum" width="80" />
		<field name="leadDP1" readonly="true" aggregate="sum" width="95" />
		<field name="arqaDP1" readonly="true" aggregate="sum" width="100" />
		<field name="trDP1" readonly="true" aggregate="sum" width="85" />
		<field name="avgROI" readonly="true" aggregate="sum" width="85">
			<hilite color="success" if="avgROI > 35" />
			<hilite color="info" if="avgROI >= 20 &amp;&amp; avgROI &lt;= 35 " />
			<hilite color="warning" if="avgROI >= 15 &amp;&amp; avgROI &lt; 20 " />
			<hilite color="danger" if="avgROI &lt; 15 " />
		</field>
		<field name="avgLEADMRP" readonly="true" aggregate="sum" width="85">
			<hilite color="info" if="avgLEADMRP > 0" />
		</field>
		<field name="avgARMRP" readonly="true" aggregate="sum" width="85">
			<hilite color="info" if="avgARMRP > 0" />
		</field>
		<field name="plan" readonly="true" aggregate="sum" width="65">
			<hilite background="grey" if="plan > 0" />
		</field>
		<field name="noAM" width="85" />
		<field name="noTL" width="85" />
		<field name="noH" width="85" />
		<field name="dailyPlanningType" />
		<field name="noteForSale" />
		<field name="noteForLineManager"  />
	</grid>

	<form name="neyu-daily-planning-form" title="Daily Planning" model="com.axelor.neyu.db.DailyPlanning">
		<panel name="overviewPanal" title="Overview">
			<field name="geo" />
			<field name="aff" />
			<field name="offer" />
			<field name="sub" />

			<field name="leadDM1" />
			<field name="arqaDM1" />
			<field name="trDM1" />

			<field name="leadD0" />
			<field name="arqaD0" />
			<field name="trD0" />

			<field name="leadDP1" />
			<field name="arqaDP1" />
			<field name="trDP1" />

			<field name="avgROI" />
			<field name="avgLEADMRP" />
			<field name="avgARMRP" />

			<field name="plan" />
			<field name="noAM" />
			<field name="noTL" />
			<field name="noH" />

			<field name="dailyPlanningType" />
			<field name="noteForSale" />
			<field name="noteForLineManager" />
			<field name="dailyPlanningParrent" />

		</panel>
	</form>

</object-views>
