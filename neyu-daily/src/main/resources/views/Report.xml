<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

  <grid name="report-grid" title="Report" model="com.axelor.daily.db.Report" groupBy="country">
    <field name="tl"/>
    <field name="am"/>
    <field name="aff"/>
    <field name="offer"/>
    <field name="sub"/>
    <field name="lead" aggregate="sum">
      <hilite color="danger" if="true"/>
    </field>
    <field name="ar_qa" aggregate="sum"/>
    <field name="tr" aggregate="sum"/>
    <field name="ar_mrp" aggregate="sum">
      <hilite if="true" color="primary"/>
    </field>
    <field name="lead_mrp" aggregate="sum">
      <hilite if="true" color="primary"/>
    </field>
    <field name="roi" aggregate="sum">
      <hilite if="roi &gt; 35" color="success"/>
      <hilite if="roi &gt;= 20 &amp;&amp; roi &lt;= 35 " color="info"/>
      <hilite if="roi &gt;= 15 &amp;&amp; roi &lt; 20 " color="warning"/>
      <hilite if="roi &lt; 15 " color="danger"/>
    </field>
    <field name="planned" aggregate="sum">
      <hilite background="info" if="true"/>
    </field>
    <field name="no_am"/>
    <field name="no_tl"/>
    <field name="no_head"/>
    <field name="type"/>
    <field name="note"/>
    <field name="proof"/>
    <field name="status" hidden="true"/>
    <field name="nation" hidden="true"/>
  </grid>

  <form model="com.axelor.daily.db.Report" title="Report" name="report-form" width="large">
    <panel>
      <field name="status" grid-view="status-grid" colSpan="12" widget="NavSelect"/>
      <field name="tl"/>
      <field name="am"/>
      <field name="aff"/>
      <field name="offer"/>
      <field name="sub"/>
      <field name="lead"/>
      <field name="ar_qa"/>
      <field name="tr"/>
      <field name="ar_mrp"/>
      <field name="lead_mrp"/>
      <field name="roi"/>
      <field name="planned"/>
      <field name="no_am"/>
      <field name="no_tl"/>
      <field name="no_head"/>
      <field name="type" grid-view="report-type-grid"/>
      <field name="note"/>
      <field name="proof"/>
      <field name="nation" grid-view="nation-grid"/>
    </panel>
    <panel sidebar="true">
      <button name="rejectReport" title="Reject" onClick=""/>
      <button name="save" title="Save" onClick=""/>
      <button name="submitReport" title="Submit" onClick=""/>
    </panel>
  </form>
</object-views>
